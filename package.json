{
  "name": "snocommit",
  "version": "0.1.0",
  "description": "A Simple way to commit changes in current folder.",
  "keywords": [
    "cli",
    "git",
    "commit"
  ],
  "homepage": "https://github.com/snomiao/snocommit#readme",
  "bugs": {
    "url": "https://github.com/snomiao/snocommit/issues?q=is%3Aissue+is%3Aopen+snocommit"
  },
  "repository": "https://github.com/snomiao/snocommit",
  "license": "MIT",
  "author": "snomiao <snomiao@gmail.com>",
  "type": "module",
  "exports": {
    "require": "./dist/index.cjs",
    "import": "./dist/index.js",
    "types": "./src/index.ts"
  },
  "main": "dist/index.min.cjs",
  "module": "index.ts",
  "types": "./index.ts",
  "bin": {
    "snocommit": "dist/cli-snocommit.js",
    "chore": "dist/cli-chore.js",
    "docs": "dist/cli-docs.js",
    "feat": "dist/cli-feat.js",
    "fix": "dist/cli-fix.js",
    "refactor": "dist/cli-refactor.js",
    "styles": "dist/cli-styles.js"
  },
  "files": [
    "dist",
    "*.ts"
  ],
  "scripts": {
    "build": "bun build --outdir dist --target=node --packages=external src/cli.ts src/index.tsx",
    "postbuild": "bun run postbuild.ts",
    "prepack": "npm run build",
    "fmt": "bunx @biomejs/biome check --fix",
    "prerelease": "bun run build && bun run test",
    "release": "bun x commit-and-tag-version && git push --follow-tags && npm publish",
    "test": "bun test",
    "prepare": "lefthook install"
  },
  "dependencies": {
    "openai": "^6.7.0",
    "package-up": "^5.0.0",
    "phpdie": "^1.7.0",
    "snorun": "^1.6.2",
    "tsa-composer": "^3.0.3",
    "z-chat-completion": "^0.1.8",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@types/bun": "^1.3.1",
    "@types/jest": "^29.5.14",
    "@types/node": "18.8.3",
    "async-exec": "^1.1.0",
    "lefthook": "^2.0.1",
    "p-map": "^5.5.0",
    "semantic-release": "^22.0.12",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "bunx @biomejs/biome check --fix"
  }
}
